/* Azure AI Foundry Agent Toolkit - Textual CSS Styles */
/* This stylesheet uses Textual theme variables for full theme support.
   Press 't' to cycle through available themes. */

/* Global styles */
Screen {
    background: $background;
    align: center middle;
}

/* Title styles */
#title, .screen-title {
    text-align: center;
    text-style: bold;
    color: $text;
    background: $primary;
    padding: 1;
    margin-bottom: 1;
    width: 100%;
    border-bottom: heavy $primary-darken-2;
}

.description {
    color: $text-muted;
    padding: 0 2;
    margin-bottom: 1;
    text-align: center;
}

/* Section titles */
.section-title {
    text-style: bold;
    color: $secondary;
    margin-top: 1;
    margin-bottom: 1;
    padding-left: 1;
    border-bottom: heavy $secondary;
    width: 100%;
}

/* Home screen */
#home-container {
    padding: 1 2;
    height: 100%;
    align: center middle;
}

#logo {
    text-align: center;
    color: $primary;
    padding: 1;
    margin-bottom: 1;
}

#welcome {
    text-align: center;
    color: $text;
    padding: 0 0 1 0;
    text-style: bold;
    margin-bottom: 2;
}

#nav-buttons {
    margin: 2 0;
    align: center middle;
    height: auto;
}

#nav-buttons Button {
    margin: 0 2;
    min-width: 20;
}

#status-panel {
    margin: 2 4;
    padding: 1 2;
    border: round $secondary;
    background: $surface-darken-1;
    width: 80%;
    height: auto;
}

#status-panel .info-text {
    padding: 0 1;
}

#nav-buttons-extra {
    margin-top: 2;
    align: center middle;
}

#nav-buttons-extra Button {
    margin: 0 2;
}

/* Model selection screen */
#model-container {
    padding: 0 2;
    height: 100%;
}

#model-table {
    height: 1fr;
    min-height: 10;
    margin: 1 0;
    border: round $primary;
    background: $surface;
}

.status-bar {
    dock: bottom;
    height: 1;
    padding: 0 1;
    background: $primary-darken-2;
    color: $text;
}

/* Profile screen */
#profile-container {
    padding: 0 2;
    height: 100%;
}

#main-content {
    height: 1fr;
    min-height: 15;
}

#profile-list {
    width: 40%;
    padding-right: 1;
    height: 100%;
}

#profile-table {
    height: 1fr;
    min-height: 8;
    border: round $primary;
    background: $surface;
}

#profile-details-panel {
    width: 60%;
    padding-left: 1;
    border-left: heavy $primary;
    height: 100%;
    overflow-y: auto;
}

#profile-details {
    height: auto;
    padding: 1;
    border: round $secondary;
    background: $surface;
}

/* Agent wizard screen */
#wizard-container {
    padding: 0 2;
    height: 1fr;
}

#existing-agents-table {
    height: 1fr;
    min-height: 6;
    margin: 0 0 1 0;
    border: round $success;
    background: $surface;
}

#existing-agents-summary {
    color: $text-muted;
    padding: 0 1;
    border-left: thick $success;
    background: $surface-darken-1;
}

#delete-buttons {
    height: auto;
    margin: 1 0;
    align: left middle;
}

#delete-buttons Button {
    margin-right: 2;
}

#delete-status {
    color: $text-muted;
    padding: 0 1;
    margin-bottom: 1;
    border-left: thick $warning;
    background: $surface-darken-1;
}

.section-header-with-button {
    height: auto;
    align: left middle;
    padding: 0;
    margin-bottom: 1;
}

.section-header-with-button Static {
    width: 1fr;
}

.section-header-with-button Button {
    width: auto;
    margin-left: 2;
}

.small-button {
    min-width: 15;
    height: 1;
}

#config-inputs {
    margin: 1 0;
    padding: 1;
    border: round $secondary;
    background: $surface;
}

#config-inputs Vertical {
    width: 1fr;
    padding: 0 1;
}

#config-inputs Input {
    width: 100%;
}

#workflow-container {
    padding: 0 2;
    height: 1fr;
}

#existing-workflows-panel,
#create-workflows-panel {
    margin: 1 0;
    padding: 1;
    border: round $secondary;
    background: $surface;
    height: auto;
}

#create-workflows-panel {
    padding-bottom: 2;
}

#existing-workflows-table,
#workflow-templates-table,
#workflows-table {
    height: 1fr;
    min-height: 6;
    margin: 0 0 1 0;
    border: round $primary;
    background: $surface;
}

.info-text {
    color: $text-muted;
    padding: 0 1;
}

#agents-table {
    height: 1fr;
    min-height: 10;
    border: round $primary;
    background: $surface;
}

/* Simulation screen - base styles only, detailed styles in screen's DEFAULT_CSS */
#execution-panel {
    margin-top: 1;
    height: 1fr;
}

#progress-panel {
    height: auto;
    padding: 1;
    border: round $primary;
    background: $surface;
    margin-bottom: 1;
}

#log-panel {
    height: 1fr;
    border: round $primary;
    background: $surface;
}

#sim-log {
    height: 1fr;
    border: none;
}

/* Daemon Metrics Dashboard */
#metrics-grid {
    grid-size: 3;
    grid-columns: 1fr 1fr 1fr;
    grid-gutter: 2;
    height: auto;
    margin: 1 0;
}

.metric-box {
    padding: 2;
    border: round $primary;
    background: $surface;
    align: center middle;
    text-align: center;
}

.metric-header {
    color: $text-muted;
    text-style: bold;
}

.metric-value {
    color: $accent;
    text-style: bold;
    margin-top: 1;
}

/* Results section styling */
.results-section {
    margin-bottom: 2;
    padding: 1;
    border: round $secondary;
    background: $surface;
}

.results-header {
    text-align: center;
    background: $secondary;
    color: $text;
    text-style: bold;
    padding: 0 1;
    margin-bottom: 1;
}

.summary-text {
    padding: 1;
    margin-bottom: 1;
    border-bottom: heavy $panel;
}

.table-container {
    height: auto;
    margin-top: 1;
}

.table-box {
    width: 1fr;
    margin: 0 1;
}

.table-title {
    text-style: bold;
    color: $accent;
    margin-bottom: 1;
    text-align: center;
}

/* General improvements */
.hidden {
    display: none;
}

TabPane {
    padding: 1 2;
}

TabbedContent {
    margin-top: 1;
}

.screen-title {
    background: $primary;
    color: $text;
    padding: 1;
    text-style: bold italic;
    border-bottom: heavy $primary-darken-2;
}

/* Data tables */
DataTable {
    height: 1fr;
    min-height: 6;
    scrollbar-gutter: stable;
    border: round $primary;
}

DataTable > .datatable--header {
    background: $primary-darken-1;
    color: $text;
    text-style: bold;
}

DataTable > .datatable--cursor {
    background: $primary;
    color: $text;
}

DataTable > .datatable--even-row {
    background: $surface;
}

DataTable > .datatable--odd-row {
    background: $surface-darken-1;
}

/* Progress bars */
ProgressBar {
    padding: 0;
    margin: 1 0;
}

/* Radio buttons */
RadioSet {
    margin: 1 0;
}

/* Inputs */
Input {
    margin: 0;
}

/* Notifications */
Toast {
    width: auto;
    padding: 1 2;
}

/* Agent Management Screen */
#manage-agents-container {
    padding: 0 2;
}

/* Evaluation Screen */
#evaluation-container {
    padding: 0 2;
    height: 1fr;
}

/* Daemon Screen */
#daemon-container {
    padding: 0 2;
}

#daemon-metrics {
    margin: 1 0;
    padding: 1;
    border: round $primary;
    background: $surface-darken-1;
}

.metric-row {
    height: auto;
    margin: 1 0;
}

.metric-label {
    width: 20;
    text-style: bold;
}

.metric-value {
    width: 15;
}

.status-running {
    color: $success;
    text-style: bold;
}

.status-stopped {
    color: $error;
}

/* Header styling for theme compatibility */
Header {
    background: $primary;
    color: $text;
    dock: top;
    height: 1;
}

/* Footer styling */
Footer {
    background: $surface-darken-2;
    dock: bottom;
    height: 1;
}

/* Button theming */
Button {
    background: $primary;
    color: $text;
    border: none;
    height: 3;
    min-width: 10;
}

Button:hover {
    background: $primary-lighten-1;
}

Button:focus {
    background: $primary-darken-1;
    border: wide $accent;
}

Button.-primary {
    background: $primary;
}

Button.-success {
    background: $success;
}

Button.-warning {
    background: $warning;
    color: $background;
}

Button.-error {
    background: $error;
}

/* Input fields */
Input {
    margin: 0;
    background: $surface;
    border: round $primary;
}

Input:focus {
    border: round $accent;
}

/* Select widgets */
Select {
    background: $surface;
    border: round $primary;
}

Select:focus {
    border: round $accent;
}

/* General text colors */
.text-success {
    color: $success;
}

.text-error {
    color: $error;
}

.text-warning {
    color: $warning;
}

.text-muted {
    color: $text-muted;
}

.text-primary {
    color: $text-primary;
}

.text-secondary {
    color: $text-secondary;
}

.text-accent {
    color: $text-accent;
}
