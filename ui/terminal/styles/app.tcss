/* Azure AI Foundry Agent Toolkit - Textual CSS Styles */

/* Global styles */
Screen {
    background: $surface;
}

/* Title styles */
#title, .screen-title {
    text-align: center;
    text-style: bold;
    color: $primary;
    padding: 1;
    margin-bottom: 1;
}

.description {
    color: $text-muted;
    padding: 0 1;
    margin-bottom: 1;
}

/* Section titles */
.section-title {
    text-style: bold;
    color: $secondary;
    margin-top: 1;
    margin-bottom: 0;
    padding-left: 1;
}

/* Home screen */
#home-container {
    padding: 1 2;
}

#logo {
    text-align: center;
    color: $primary;
    padding: 1;
}

#welcome {
    text-align: center;
    color: $text;
    padding: 1;
    text-style: bold;
}

#guide {
    margin: 1 2;
    padding: 1;
    border: solid $primary;
}

.guide-step {
    padding-left: 2;
    color: $text-muted;
}

#nav-buttons {
    margin: 2 0;
    align: center middle;
}

#nav-buttons Button {
    margin: 0 1;
}

#status-panel {
    margin: 1 2;
    padding: 1;
    border: solid $secondary;
}

/* Workflow stepper */
#stepper-panel {
    margin: 1 2;
    padding: 1;
    border: solid $primary;
}

#workflow-stepper {
    height: auto;
    align: center middle;
    padding: 0 1;
}

#workflow-stepper Static {
    width: auto;
    padding: 0 1;
}

.step-arrow {
    color: $text-muted;
}

.step-completed {
    color: $success;
    text-style: bold;
}

.step-next {
    color: $primary;
    text-style: bold;
}

.step-pending {
    color: $text-muted;
}

#next-step-hint {
    text-align: center;
    color: $text-muted;
    padding: 1 0;
}

#nav-buttons-extra {
    margin: 1 0;
    align: center middle;
}

#nav-buttons-extra Button {
    margin: 0 1;
}

/* Model selection screen */
#model-container {
    padding: 1 2;
    height: 100%;
}

#model-table {
    height: 1fr;
    min-height: 10;
    max-height: 70%;
    margin: 1 0;
}

.status-bar {
    dock: bottom;
    height: 1;
    padding: 0 1;
    background: $primary-darken-2;
    color: $text;
}

/* Profile screen */
#profile-container {
    padding: 1 2;
    height: 100%;
}

#main-content {
    height: 1fr;
    min-height: 20;
}

#profile-list {
    width: 40%;
    padding-right: 1;
    height: 100%;
}

#profile-table {
    height: 1fr;
    min-height: 10;
}

#profile-details-panel {
    width: 60%;
    padding-left: 1;
    border-left: solid $primary;
    height: 100%;
    overflow-y: auto;
}

#profile-details {
    height: auto;
    padding: 1;
}

/* Agent wizard screen */
#wizard-container {
    padding: 1 2;
}

#existing-agents-panel {
    margin: 1 0;
    padding: 1;
    border: solid $success;
    max-height: 30%;
}

#existing-agents-table {
    height: 100%;
    min-height: 5;
    max-height: 15;
}

#existing-agents-summary {
    color: $text-muted;
    padding: 0 1 1 1;
}

.section-header-with-button {
    height: auto;
    align: left middle;
    padding: 0;
}

.section-header-with-button Static {
    width: 1fr;
}

.section-header-with-button Button {
    width: auto;
    margin-left: 1;
}

.small-button {
    min-width: 15;
    height: 1;
}

#config-panel {
    margin: 1 0;
    padding: 1;
    border: solid $secondary;
}

#config-inputs {
    margin: 1 0;
}

#config-inputs Vertical {
    width: 1fr;
    padding: 0 1;
}

#config-inputs Input {
    width: 100%;
}

.info-text {
    color: $text-muted;
    padding: 1;
}

#progress-panel {
    margin: 1 0;
    padding: 1;
    border: solid $primary;
}

#agents-panel {
    margin: 1 0;
    height: auto;
    max-height: 40%;
}

#agents-table {
    height: 100%;
}

/* Simulation screen */
#simulation-container {
    padding: 1 2;
}

#settings-row {
    height: auto;
    margin: 1 0;
}

#type-panel {
    width: 30%;
    padding: 1;
    border: solid $secondary;
}

#config-panel {
    width: 70%;
    padding: 1;
    border: solid $secondary;
    margin-left: 1;
}

.input-label {
    width: 10;
}

#sim-log {
    height: 15;
    margin: 1 0;
    border: solid $primary;
}

/* Results screen */
#results-container {
    padding: 1 2;
}

.results-panel {
    height: auto;
    min-height: 12;
    margin: 1 0;
    padding: 1;
    border: solid $secondary;
}

#ops-panel {
    border: solid $primary;
}

#guard-panel {
    border: solid $warning;
}

#ops-summary, #guard-summary {
    padding: 1;
    margin: 1 0;
}

/* Button bar */
#button-bar {
    margin: 1 0;
    align: center middle;
    height: auto;
}

#button-bar Button {
    margin: 0 1;
}

/* Labels */
.label {
    margin-bottom: 0;
    color: $text;
    text-style: bold;
}

/* Data tables */
DataTable {
    height: 1fr;
    min-height: 8;
    max-height: 25;
    scrollbar-gutter: stable;
}

DataTable > .datatable--header {
    background: $primary-darken-1;
    color: $text;
    text-style: bold;
}

DataTable > .datatable--cursor {
    background: $primary;
    color: $text;
}

DataTable > .datatable--even-row {
    background: $surface;
}

DataTable > .datatable--odd-row {
    background: $surface-darken-1;
}

/* Progress bars */
ProgressBar {
    padding: 1 0;
}

/* Radio buttons */
RadioSet {
    margin: 1 0;
}

/* Inputs */
Input {
    margin: 0 0 1 0;
}

/* Notifications */
Toast {
    width: auto;
}

/* Agent Management Screen */
#manage-agents-container {
    padding: 1 2;
}

/* Daemon Screen */
#daemon-container {
    padding: 1 2;
}

#daemon-metrics {
    margin: 1 0;
    padding: 1;
    border: solid $primary;
}

.metric-row {
    height: auto;
}

.metric-label {
    width: 16;
    text-style: bold;
}

.metric-value {
    width: 12;
}

.status-running {
    color: $success;
    text-style: bold;
}

.status-stopped {
    color: $error;
}
